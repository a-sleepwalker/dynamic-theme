$--primary-color = #ff6700

.app
  width: 100%
  height: 100vh;
  overflow hidden
  background: rgba($--primary-color, 0.4);

  .app-header
    height 100px
    background: $--primary-color
    padding 30px 60px
    box-sizing border-box

  .app-content
    margin 0 120px
    height 400px
    background #fff;
    color: #444

